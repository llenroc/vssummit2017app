                            </StackLayout>
                            <controls:FooterDivider/>
                        </StackLayout>
                    </controls:CardView>
				 <controls:CardView >
                        <StackLayout Spacing="0">
                            <controls:LabelSection Text="HOSPEDAGEM" />
                            <controls:HeaderDivider/>
                            <StackLayout Padding="{StaticResource MediumPadding}" BackgroundColor="White" Spacing="0">
                                <Label Text="Hotel The Time Othon Flat" TextColor="#473957" FontAttributes="Bold" Style="{DynamicResource EvolveListItemTextStyle}" StyleId="SessionAbstract"/>
							 	<Label Text="Rua Hans Oersted, 115 - Brooklin" TextColor="Gray" FontAttributes="Bold" Style="{DynamicResource EvolveListItemTextStyle}" StyleId="SessionAbstract"/>
