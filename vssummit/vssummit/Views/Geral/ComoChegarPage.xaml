                            </StackLayout>
							 <StackLayout Padding="{StaticResource MediumPadding}" BackgroundColor="White" Spacing="0">
                                <Label Text="Quality Berrini" TextColor="#473957" FontAttributes="Bold" Style="{DynamicResource EvolveListItemTextStyle}" StyleId="SessionAbstract"/>
