                            </StackLayout>
							 <StackLayout Padding="{StaticResource MediumPadding}" BackgroundColor="White" Spacing="0">
                                <Label Text="Hilton São Paulo Morumbi" TextColor="#473957" FontAttributes="Bold" Style="{DynamicResource EvolveListItemTextStyle}" StyleId="SessionAbstract"/>
							 	<Label Text="Av. das Nações Unidas, 12901 - Brooklin Paulista" TextColor="Gray" FontAttributes="Bold" Style="{DynamicResource EvolveListItemTextStyle}" StyleId="SessionAbstract"/>
								<Label Text="São Paulo - SP, 04578-000" TextColor="Gray" FontAttributes="Bold" Style="{DynamicResource EvolveListItemTextStyle}" StyleId="SessionAbstract"/>
