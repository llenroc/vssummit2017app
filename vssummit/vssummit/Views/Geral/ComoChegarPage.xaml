							 <StackLayout Padding="{StaticResource MediumPadding}" BackgroundColor="White" Spacing="0">
                                <Label Text="Carro" TextColor="#473957" FontAttributes="Bold" Style="{DynamicResource EvolveListItemTextStyle}" StyleId="SessionAbstract"/>
							 	<Label Text="Você pode estacionar nos estacionamentos próximos e/ou no Shopping D&amp;D (Av. das Nações Unidas, 12555)" LineBreakMode="WordWrap" TextColor="Gray" FontAttributes="Bold" Style="{DynamicResource EvolveListItemTextStyle}" StyleId="SessionAbstract"/>
                            </StackLayout>
						 	<StackLayout Padding="{StaticResource MediumPadding}" BackgroundColor="White" Spacing="0">
                                <Label Text="Aeroporto de Congonhas" TextColor="#473957" FontAttributes="Bold" Style="{DynamicResource EvolveListItemTextStyle}" StyleId="SessionAbstract"/>
